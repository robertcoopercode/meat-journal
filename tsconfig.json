{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "target": "es2015",
    "baseUrl": "./src",
    "lib": ["dom", "es7"],
    "paths": {
      "src/*": ["*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src", "test", "storybook"]
}
